OPENMP ?= 0

MCMODEL ?= large

SPECIALIZE_STEPFOR ?= 0
SPECIALIZE_MATH1 ?= 0

ifneq ($(OPENMP),0)
  PKG_CFLAGS += -fopenmp
  PKG_LIBS += -fopenmp
endif

ifneq ($(MCMODEL),large)
  PKG_CPPFLAGS += -DMCMODEL_SMALL
endif

ifneq ($(SPECIALIZE_STEPFOR),0)
  PKG_CPPFLAGS += -DSTEPFOR_SPECIALIZE
endif

ifneq ($(SPECIALIZE_MATH1),0)
  PKG_CPPFLAGS += -DMATH1_SPECIALIZE
endif